<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ru.peshekhonov.cloud.controller.CloudController">
    <MenuBar>
        <Menu text="File">
            <MenuItem onAction="#exitMenuOnActionHandler" text="Exit"/>
        </Menu>
    </MenuBar>
    <HBox VBox.vgrow="ALWAYS">
        <VBox HBox.hgrow="ALWAYS">
            <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Клиент"/>
            <ListView fx:id="clientListView" VBox.vgrow="ALWAYS"/>
        </VBox>
        <VBox alignment="CENTER" prefWidth="80.0" spacing="50.0">
            <children>
                <Button fx:id="buttonCopyToServer" mnemonicParsing="false" onAction="#buttonCopyToServerOnActionHandler"
                        text="&gt;"/>
                <Button fx:id="buttonCopyToClient" mnemonicParsing="false" onAction="#buttonCopyToClientOnActionHandler"
                        text="&lt;"/>
            </children>
        </VBox>
        <VBox HBox.hgrow="ALWAYS">
            <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Сервер"/>
            <ListView fx:id="serverListView" VBox.vgrow="ALWAYS"/>
        </VBox>
    </HBox>
</VBox>
